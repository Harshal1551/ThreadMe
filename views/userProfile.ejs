<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= user.username %>'s Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 p-10">
 <a href="javascript:history.back()" class="text-blue-600 mb-4 block">‚Üê Go Back</a>


  <div class="mb-6 flex items-center gap-4">
    <img src="/images/uploads/<%= user.profilepic %>" class="w-16 h-16 rounded-full object-cover border" />
    <div>
      <h1 class="text-xl font-bold">@<%= user.username %></h1>
      <p class="text-sm text-gray-500"><%= user.email %></p>
    </div>
  </div>

  <h2 class="text-lg font-semibold mb-4">Posts</h2>
  <% if (posts.length === 0) { %>
    <p class="text-gray-600">No posts yet.</p>
  <% } else { %>
    <% posts.forEach(post => { %>
       <div class="bg-white p-4 rounded shadow mb-4">
         <% if (post.image) { %>
           <img src="/images/uploads/<%= post.image %>" alt="Post Image" class="w-full max-h-96 object-cover rounded mb-3" />
         <% } %>
         <p><%= post.content %></p>
       </div>
    <% }) %>
  <% } %>
</body>
</html>
